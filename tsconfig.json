{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@domain/*": ["./src/domain/*"],
      "@db/*": ["./src/infrastructure/db/*"],
      "@route/*": ["./src/infrastructure/http/*"],
      "@usecase/*": ["./src/application/*"],
      "@regex/*": ["./src/shared/regex/*"],
      "@validation/*": ["./src/shared/validation/*"],
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}